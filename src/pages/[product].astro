---
import Layout from "../layouts/Layout.astro";
import { products } from "../data/products"

const { product } = Astro.params;

const info = products.find(p => p.id === product)

if (!info) {
    return Astro.redirect("/404");
}
---

<Layout title=`Producto ${info.title}`>
    <main class="m-auto max-w-4xl">

        <div class="grid grid-cols-[350px_1fr] gap-x-4 mt-20">
            <picture>
                <img class="bg-blue-400/20" src={info.img} alt={info.title}>
            </picture>
            <aside class="text-white">
                <h1 class="text-3xl text-center uppercase font-bold">{ info.title }</h1>
                <p class="text-lg mt-3">{info.desc}</p>
                <p class="font-bold italic">{info.price}</p>
            </aside>
        </div>
    </main>
</Layout>